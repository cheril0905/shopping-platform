<%- include('./partials/header') %>

<% if (success.length > 0) { %>
<div class="absolute top-5 left-1/2 -translate-x-1/2 p-3 rounded-md bg-green-500 shadow-lg animate-bounce">
    <span class="text-white font-medium"><%= success %></span>
</div>
<% } %>

<div class="w-full min-h-screen flex px-10 py-16 bg-gray-50">
    
    <!-- Sidebar -->
    <div class="w-[22%] h-full flex flex-col pr-6 border-r border-gray-200">
        <!-- Sort Section -->
        <div class="mb-10">
            <h3 class="text-lg font-semibold mb-2 text-gray-700">Sort By</h3>
            <form action="/shop">
                <select 
                    class="w-full border rounded-lg px-3 py-2 text-gray-600 focus:outline-none focus:ring-2 focus:ring-black"
                    name="sortby">
                    <option value="popular">Popular</option>
                    <option value="newest">Newest</option>
                </select>
            </form>
        </div>

        <!-- Categories -->
        <div class="mb-10">
            <h3 class="text-lg font-semibold mb-3 text-gray-700">Categories</h3>
            <div class="flex flex-col space-y-2 text-gray-600">
                <a class="hover:text-black transition" href="">New Collection</a>
                <a class="hover:text-black transition" href="">All Products</a>
                <a class="hover:text-black transition" href="">Discounted Products</a>
            </div>
        </div>

        <!-- Filters -->
        <div>
            <h3 class="text-lg font-semibold mb-3 text-gray-700">Filters</h3>
            <div class="flex flex-col space-y-2 text-gray-600">
                <a class="hover:text-black transition" href="">Availability</a>
                <a class="hover:text-black transition" href="">Discount</a>
            </div>
        </div>
    </div>

    <!-- Products Section -->
    <div class="w-[78%] pl-6">
        <h2 class="text-2xl font-bold mb-6 text-gray-800">Shop Products</h2>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
            <% products.forEach(function(product){ %>
                <div class="bg-white rounded-xl shadow-sm hover:shadow-lg transition overflow-hidden group">
                    
                    <!-- Image Section -->
                    <div class="w-full h-52 flex items-center justify-center bg-[<%= product.bgcolor %>] relative">
                        <img class="h-44 object-contain transition-transform group-hover:scale-105" 
                             src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                             alt="<%= product.name %>">
                    </div>

                    <!-- Info Panel -->
                    <div class="flex justify-between items-center px-4 py-3 bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>]">
                        <div>
                            <h3 class="font-semibold text-lg"><%= product.name %></h3>
                            <h4 class="text-sm font-medium">â‚¹ <%= product.price %></h4>
                        </div>
                        <a class="w-9 h-9 flex items-center justify-center rounded-full bg-white text-gray-700 shadow hover:bg-black hover:text-white transition" href="/addtocart/<%= product._id %>">
                            <i class="ri-add-line text-lg"></i>
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
