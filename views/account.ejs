<%- include('./partials/header') %>

<div class="w-full min-h-screen bg-gray-50 px-10 py-10">
    <h2 class="text-3xl font-bold mb-8 text-gray-800">My Account</h2>

    <div class="grid grid-cols-3 gap-8">
        <!-- Left Side Profile Info -->
        <div class="col-span-1 bg-white rounded-2xl shadow p-6">
            <div class="flex flex-col items-center">
                <!-- Placeholder Avatar -->
                <div class="w-24 h-24 bg-gray-200 rounded-full flex items-center justify-center text-gray-600 text-3xl font-bold">
                    <%= user.fullname.charAt(0).toUpperCase() %>
                </div>
                <h3 class="text-xl font-semibold mt-4"><%= user.fullname %></h3>
                <p class="text-gray-600"><%= user.email %></p>
                <p class="text-gray-500 mt-2">ðŸ“ž <%= user.contact || "Not provided" %></p>
            </div>
        </div>

        <!-- Right Side Content -->
        <div class="col-span-2 space-y-8">

            <!-- Profile Details -->
            <div class="bg-white rounded-2xl shadow p-6">
                <h3 class="text-xl font-semibold mb-4">Profile Information</h3>
                <div class="grid grid-cols-2 gap-4 text-gray-700">
                    <p><strong>Full Name:</strong> <%= user.fullname %></p>
                    <p><strong>Email:</strong> <%= user.email %></p>
                    <p><strong>Contact:</strong> <%= user.contact || "Not provided" %></p>
                </div>
            </div>

            <!-- Cart Section -->
            <div class="bg-white rounded-2xl shadow p-6">
                <h3 class="text-xl font-semibold mb-4">My Cart</h3>
                <% if(user.cart && user.cart.length > 0) { %>
                    <div class="grid grid-cols-2 gap-6">
                        <% user.cart.forEach(item => { %>
                            <div class="border rounded-lg p-4">
                                <img class="w-full h-40 object-cover rounded-md" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="<%= item.name %>">
                                <h4 class="text-lg font-semibold mt-2"><%= item.name %></h4>
                                <p class="text-gray-600">â‚¹ <%= item.price %></p>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <p class="text-gray-500">Your cart is empty.</p>
                <% } %>
            </div>

            <!-- Orders Section -->
            <div class="bg-white rounded-2xl shadow p-6">
                <h3 class="text-xl font-semibold mb-4">My Orders</h3>
                <% if(user.orders && user.orders.length > 0) { %>
                    <ul class="list-disc list-inside text-gray-700">
                        <% user.orders.forEach((order, index) => { %>
                            <li>Order #<%= index + 1 %> â€“ <%= order %></li>
                        <% }) %>
                    </ul>
                <% } else { %>
                    <p class="text-gray-500">You havenâ€™t placed any orders yet.</p>
                <% } %>
            </div>

        </div>
    </div>
</div>

<%- include('./partials/footer') %>
